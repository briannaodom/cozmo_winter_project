<launch>
    <arg name="marker_size" default="4.4" />
	<arg name="max_new_marker_error" default="0.08" />
	<arg name="max_track_error" default="0.2" />
	<arg name="cam_image_topic" default="/camera_image/image_raw" />
	<arg name="cam_info_topic" default="/camera_image/camera_info" />	
	<arg name="output_frame" default="/webcam" />

	<node name="open_camera_node" pkg="cozmo_files" type="open_camera.py" output="screen">
	</node>

 	<node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <remap from="image" to="/camera_image/image_raw" />
  	</node>

  	<node name="ar_track_alvar" pkg="ar_track_alvar" type="individualMarkersNoKinect" respawn="false" output="screen" args="$(arg marker_size) $(arg max_new_marker_error) $(arg max_track_error) $(arg cam_image_topic) $(arg cam_info_topic) $(arg output_frame)" />

  	<node name="ar_tag_tracking_node" pkg="cozmo_files" type="ar_tag_tracking.py"/>

  	<node pkg="tf" type="static_transform_publisher" name="mav_to_camera" output="screen" args="0 0 0 0.785398163 0 0 webcam_driver camera 10" />

</launch>